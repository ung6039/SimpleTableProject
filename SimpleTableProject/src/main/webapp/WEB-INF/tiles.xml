<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="main" template="/webapp/main/Main.jsp">
		<put-attribute name="nav" value="/webapp/main/nav.jsp"/>
		<put-attribute name="content" value="/webapp/main/content.jsp"/>
	</definition>
	
	<!-- 1) 경로가 2개일때 -->
	<definition name="*/*" extends="main">
		<put-attribute name="content" value="/{1}/{2}.jsp"/>
	</definition>
	<!-- 2) 경로가 3개일때  -->
	<definition name="*/*/*">
		<put-attribute name="content" value="/{1}/{2}/{3}.jsp"/>
	</definition>
</tiles-definitions>